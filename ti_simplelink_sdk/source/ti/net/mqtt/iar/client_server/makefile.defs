
SIMPLELINK_CC32XX_SDK_INSTALL_DIR ?= $(abspath ../../../../../..)

include $(SIMPLELINK_CC32XX_SDK_INSTALL_DIR)/imports.mak

ROOT=$(SIMPLELINK_CC32XX_SDK_INSTALL_DIR)/source/ti/net/mqtt

#
# Source path
#
VPATH = $(ROOT)/client:$(ROOT)/common:$(ROOT)/interface:$(ROOT)/platform:$(ROOT)/server

CC = "$(IAR_ARMCOMPILER)/bin/iccarm"
ASM = "$(IAR_ARMCOMPILER)/bin/iasmarm"
AR = "$(IAR_ARMCOMPILER)/bin/iarchive"

STDINC = "$(IAR_ARMCOMPILER)/include"

#
# Include path
#
IPATH  = -I$(ROOT)
IPATH += -I$(SIMPLELINK_CC32XX_SDK_INSTALL_DIR)/source/ti/posix/iar
IPATH += -I$(ROOT)/client
IPATH += -I$(ROOT)/common
IPATH += -I$(ROOT)/interface
IPATH += -I$(ROOT)/platform
IPATH += -I$(ROOT)/server
IPATH += -I$(ROOT)/../../../
IPATH += -I$(ROOT)/../../drivers/net/wifi
IPATH += -I$(STDINC)

CFLAGS = -Dewarm  --debug --silent --aeabi --cpu=Cortex-M4 --diag_suppress=Pa050,Go005 --endian=little -e --thumb -I$(IPATH)

CFILES = \
    cc32xx_sl_net.c \
    client_core.c \
    mqtt_client.c \
    mqtt_common.c \
    client_mgmt.c \
    mqtt_server.c \
    server_core.c \
    server_pkts.c \
    server_plug.c \
    server_util.c

OBJCFILES = $(CFILES:.c=.obj)

mqtt_client_server.a: $(OBJCFILES)
	@ echo ar $@ ...
	@ $(RM) $@ > $(DEVNULL) 2>&1
	@ $(AR) --silent -o $@ $(OBJCFILES)

%.obj:%.c
	@ echo cc $@ ...
	@ $(CC) $(CFLAGS) $< -o $@

clean:
	@ echo cleaning ...
	@ $(RM) *.obj > $(DEVNULL) 2>&1
	@ $(RM) *.a > $(DEVNULL) 2>&1
